---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import InstagramIcon from "../components/icons/InstagramIcon.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import SendMailIcon from "../components/icons/SendMailIcon.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefcaseIcon from "../components/icons/BriefcaseIcon.astro";
---

<Layout
	title="Portfolio de José Luis Tanicuchí - Desarrollador y programador web"
	description="Contrata a José Luis Tanicuchí Cadena para crear tu aplicación web. Desarrollador y programador web, especializado en el stack TALL (Tailwind,Alpine,Laravel y Livewire)."
>
	<main>
		<SectionContainer class="pt-32 pb-12">
			<img
				class="rounded-full size-24 mb-4"
				src="https://avatars.githubusercontent.com/u/66490180?v=4"
				alt="Josluistanic avatar"
			/>
			<h1
				class="text-white text-4xl font-bold flex flex-row gap-x-4 pb-10"
			>
				Hola, soy José Tanicuchí
				<a
					class="flex justify-center items-center"
					href="https://ec.linkedin.com/in/joseluistanic"
					target="_blank"
					rel="noopener"><Badge>Disponible para freelance</Badge></a
				>
			</h1>
			<h2 class="text-2xl text-wrap mb-4">
				<span class="text-yellow-200/90">Desarrollador Web</span> ecuatoriano.
				<span class="text-opacity-65">
					Especializado en el stack TALL, UX y UI.</span
				>
			</h2>
			<nav class="flex gap-x-2 mb-5">
				<SocialPill
					href="https://www.linkedin.com/in/joseluistanic/"
					class="hover:text-blue-400/90"
				>
					<LinkedInIcon class="size-4" />
					 LinkedIn
				</SocialPill>

				<SocialPill
					href="https://github.com/Josluistanic"
					class="hover:text-stone-400/90"
				>
					<GitHubIcon class="size-4" />
					 GitHub
				</SocialPill>

				<SocialPill
					href="https://www.instagram.com/jos.luistanic/"
					class="hover:text-[#ff6c6b]"
				>
					<InstagramIcon class="size-4" />
					 Instagram
				</SocialPill>

				<SocialPill
					href="mailto:dev@josluistanic.com"
					class="hover:text-stone-400/90"
				>
					<SendMailIcon class="size-4" />
					 dev@josluistanic.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experience">
			<div>
				<h2
					class="text-2xl font-semibold mb-6 flex gap-x-2 items-center"
				>
					<BriefcaseIcon class="size-8 m-1" />
					 Experiencia
				</h2>
			</div>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
