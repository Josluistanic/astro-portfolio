---
import LaravelIcon from "./icons/LaravelIcon.astro";
import WinterCMSIcon from "./icons/WinterCMSIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import BootstrapIcon from "./icons/BootstrapIcon.astro";
import PhpIcon from "./icons/PhpIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import JoomlaIcon from "./icons/JoomlaIcon.astro";
import WordpressIcon from "./icons/WordpressIcon.astro";
import LivewireIcon from "./icons/LivewireIcon.astro";
import AlpineJsIcon from "./icons/AlpineJsIcon.astro";
import JQueryIcon from "./icons/JQueryIcon.astro";

const TAGS = {
  LARAVEL: {
    name: "Laravel",
    class: "bg-red-100 text-red-700",
    icon: LaravelIcon,
  },
  WINTERCMS: {
    name: "WinterCMS",
    class: "bg-sky-200 text-sky-700",
    icon: WinterCMSIcon,
  },
  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-cyan-200 text-cyan-700",
    icon: TailwindIcon,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-violet-300 text-violet-700",
    icon: BootstrapIcon,
  },
  PHP: {
    name: "PHP",
    class: "bg-slate-400 text-slate-700",
    icon: PhpIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-amber-100 text-amber-700",
    icon: JavaScriptIcon,
  },
  JOOMLA: {
    name: "Joomla",
    class: "bg-sky-200 text-sky-700",
    icon: JoomlaIcon,
  },
  WORDPRESS: {
    name: "Wordpress",
    class: "bg-sky-200 text-sky-700",
    icon: WordpressIcon,
  },
  LIVEWIRE: {
    name: "Livewire",
    class: "bg-pink-200  text-pink-700",
    icon: LivewireIcon,
  },
  ALPINEJS: {
    name: "AlpineJS",
    class: "bg-sky-200 text-sky-700",
    icon: AlpineJsIcon,
  },
  JQUERY: {
    name: "JQuery",
    class: "bg-sky-300 text-sky-700",
    icon: JQueryIcon,
  },
};

const PROJECTS = [
  {
    title: "Nunu",
    description:
      "Nunu es un proyecto que involucra un CMS ligero y un tema diseñado para páginas web de instituciones públicas del Ecuador. Orientado a ser accesible, simple e intuitivo. Proyecto privado",
    link: "https://gadlaunionq.gob.ec",
    github: "#!",
    image: "/img/projects/gadlaunionq.webp",
    tags: [TAGS.WINTERCMS, TAGS.BOOTSTRAP, TAGS.JQUERY],
  },
  {
    title: "Facturador HardSoft",
    description:
      "Sistema de facturación que luego se convirtió en plataforma orientado a ser usado tanto por instituciones públicas como por empresas privadas. Programado bajo la ficha técnica y reglamentación del SRI con la capacidad de emitir facturas, comprobantes de retención, comprobantes de retención ATS, liquidaciones de compra de bienes y prestación de servicios, realizar reportes, emitir el Anexo Transaccional Simplificado, gestionar clientes y productos, manejar diferentes establecimientos con su respectivo logo propio y puntos de emisión, firma de comprobantes, generación de documentos RIDE, tickets de facturas para impresoras térmicas y funcionar con uno o varios usuarios para la misma institución. Al ser un proyecto empresarial privado no puedo compartir más que el enlace",
    link: "https://facturadorharsoft.com",
    github: "#!",
    image: "/img/projects/facturadorhardsoft.webp",
    tags: [
      TAGS.LARAVEL,
      TAGS.LIVEWIRE,
      TAGS.ALPINEJS,
      TAGS.TAILWIND,
      TAGS.JAVASCRIPT,
      TAGS.PHP,
    ],
  },
  {
    title: "Yachana",
    description:
      "Yachana es un paquete de composer que permite crear documentos XML de diferentes tipos en base a lo establecido en la ficha técnica del SRI. El proyecto se encuentra en desarrollo y será liberado pronto",
    link: "#!",
    github: "#!",
    image: "/img/projects/yachana.webp",
    tags: [TAGS.PHP],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h1 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h1>
      <p class=" mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/15"
        src={image}
        alt={`Captura de pantalla del projecto ${title}`}
      />
    </article>
  ))
}
