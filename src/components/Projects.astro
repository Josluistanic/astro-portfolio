---
import LaravelIcon from "./icons/LaravelIcon.astro";
import WinterCMSIcon from "./icons/WinterCMSIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import BootstrapIcon from "./icons/BootstrapIcon.astro";
import PhpIcon from "./icons/PhpIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import JoomlaIcon from "./icons/JoomlaIcon.astro";
import WordpressIcon from "./icons/WordpressIcon.astro";
import LivewireIcon from "./icons/LivewireIcon.astro";
import AlpineJsIcon from "./icons/AlpineJsIcon.astro";
import JQueryIcon from "./icons/JQueryIcon.astro";

const TAGS = {
  LARAVEL: {
    name: "Laravel",
    class: "bg-red-200 text-red-700",
    icon: LaravelIcon,
  },
  WINTERCMS: {
    name: "WinterCMS",
    class: "bg-sky-200 text-sky-700",
    icon: WinterCMSIcon,
  },
  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-sky-200 text-sky-700",
    icon: TailwindIcon,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-sky-200 text-sky-700",
    icon: BootstrapIcon,
  },
  PHP: {
    name: "PHP",
    class: "bg-sky-200 text-sky-700",
    icon: PhpIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-sky-200 text-sky-700",
    icon: JavaScriptIcon,
  },
  JOOMLA: {
    name: "Joomla",
    class: "bg-sky-200 text-sky-700",
    icon: JoomlaIcon,
  },
  WORDPRESS: {
    name: "Wordpress",
    class: "bg-sky-200 text-sky-700",
    icon: WordpressIcon,
  },
  LIVEWIRE: {
    name: "Livewire",
    class: "bg-sky-200 text-sky-700",
    icon: LivewireIcon,
  },
  ALPINEJS: {
    name: "AlpineJS",
    class: "bg-sky-200 text-sky-700",
    icon: AlpineJsIcon,
  },
  JQUERY: {
    name: "JQuery",
    class: "bg-sky-200 text-sky-700",
    icon: JQueryIcon,
  },
};

const PROJECTS = [
  {
    title: "Nunu",
    description:
      "Nunu es un proyecto que involucra un CMS ligero y un tema diseñado para páginas web de instituciones públicas del Ecuador. Orientado a ser accesible, simple e intuitivo",
    link: "https://gadlaunionq.gob.ec",
    github: "#!",
    image: "/img/projects/gadlaunionq.webp",
    tags: [TAGS.WINTERCMS, TAGS.BOOTSTRAP, TAGS.JQUERY],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h1 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h1>
      <p class="text-lg  mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row ">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/15"
        src={image}
        alt={`Captura de pantalla del projecto ${title}`}
      />
    </article>
  ))
}
